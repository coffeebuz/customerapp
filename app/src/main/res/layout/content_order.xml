            app:layout_constraintTop_toBottomOf="@+id/price"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" tools:text="Weak * Soy * Flat White"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/price"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="55dp"
            tools:layout_editor_absoluteX="292dp" android:id="@+id/price"/>
</android.support.constraint.ConstraintLayout>